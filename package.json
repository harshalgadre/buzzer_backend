{
  "name": "microservices-backend",
  "version": "1.0.0",
  "description": "Microservices backend platform for Interview Application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "services": "nodemon index.js",
    "install-all": "npm run install-auth && npm run install-mock && npm run install-room && npm run install-live && npm install",
    "install-auth": "cd auth-service && npm install",
    "install-mock": "cd mock-interview-service && npm install",
    "install-room": "cd room-interview-service && npm install",
    "install-live": "cd live-interview-service && npm install",
    "clean": "npm run clean-auth && npm run clean-mock && npm run clean-room && npm run clean-live",
    "clean-auth": "cd auth-service && rm -rf node_modules package-lock.json",
    "clean-mock": "cd mock-interview-service && rm -rf node_modules package-lock.json",
    "clean-room": "cd room-interview-service && rm -rf node_modules package-lock.json",
    "clean-live": "cd live-interview-service && rm -rf node_modules package-lock.json"
  },
  "keywords": [
    "microservices",
    "backend",
    "node.js",
    "express",
    "interview",
    "platform"
  ],
  "author": "Interview Platform Team",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@google/generative-ai": "^0.21.0",
    "all": "^0.0.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "colors": "^1.4.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dayjs-plugin-utc": "^0.1.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.0.1",
    "fs-extra": "^11.3.0",
    "googleapis": "^144.0.0",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "html-pdf": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.47",
    "mongoose": "^8.7.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.90.0",
    "pdfkit": "^0.16.0",
    "puppeteer": "^23.10.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stream": "^0.0.3",
    "twilio": "^5.3.5",
    "url": "^0.11.4",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
